# Path finding mit Command Blocks
# Code example for my Youtube tutorial videos
# Video: preparing


# Init
kill @e[type=villager, tag=tutorial_patrolie2]
summon villager 1263 4 1672 {NoAI:1b,Rotation:[0,0], Tags:["tutorial_patrolie2"]}
summon villager 1260 4 1675 {NoAI:1b,Rotation:[0,0], Tags:["tutorial_patrolie2"]}

# Pathfinding
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:magenta_glazed_terracotta[facing=south] run teleport @s ~ ~ ~-0.05 180 0
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:magenta_glazed_terracotta[facing=west] run teleport @s ~0.05 ~ ~ -90 0
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:magenta_glazed_terracotta[facing=north] run teleport @s ~ ~ ~0.05 0 0
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:magenta_glazed_terracotta[facing=east] run teleport @s ~-0.05 ~ ~ 90 0
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:oak_planks run teleport @s ~ ~ ~-0.2 180 -20
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:granite run teleport @s ~0.08 ~ ~ -0 0
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:diorite run teleport @s ~ ~ ~0.03 0 0
execute as @e[tag=tutorial_patrolie2] at @s if block ~ ~-1 ~ minecraft:white_wool run teleport @s ~-0.05 ~ ~ 98 10

# Abzweig
setblock 1261 3 1680 minecraft:magenta_glazed_terracotta[facing=west]
setblock 1261 3 1680 minecraft:magenta_glazed_terracotta[facing=north]

